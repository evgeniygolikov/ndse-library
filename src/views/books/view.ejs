<% extend('../partials/layout') %>

<%- include('../partials/menu', {links}) %>

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4"><%= title %></h1>
    </div>
</div>

<div class="mb-3">
    <a href="/books">&#8592; Вернуться назад</a>
</div>

<% if (book.fileCover) { %>
    <img class="img-fluid" src="/public/img/uploads/<%= book.fileCover %>" style="max-width: 200px">
<% } %>

<% if (book.description) { %>
    <p class="h5 mt-3"><%= book.description %></p>
<% } %>

<% if (book.authors) { %>
    <p class="mt-3">Авторы: <%= book.authors %></p>
<% } %>

<% if (book.favorite) { %>
    <p class="mt-3">Это любимая книга</p>
<% } %>

<% if (book.fileBook) { %>
    <a href="/books/<%= book.id %>/download">Скачать</a>
<% } %>
