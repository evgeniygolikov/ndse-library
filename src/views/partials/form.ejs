<form class="mt-5" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="book-title">Заголовок:</label>
        <input
            id="book-title"
            class="form-control"
            type="text"
            name="title"
            value="<%= book.title %>"
        >
    </div>
    <div class="form-group">
        <label for="book-description">Описание:</label>
        <input
            id="book-description"
            class="form-control"
            type="text"
            name="description"
            value="<%= book.description %>"
        >
    </div>
    <div class="form-group">
        <label for="book-authors">Авторы:</label>
        <input
            id="book-authors"
            class="form-control"
            type="text"
            name="authors"
            value="<%= book.authors %>"
        >
    </div>
    <div class="form-group form-check">
        <input
            id="book-favorite"
            class="form-check-input"
            type="checkbox"
            name="favorite"
            <%= book.favorite ? 'checked' : '' %>
        >
        <label class="form-check-label" for="book-favorite">Пометить книгу как любимую</label>
    </div>
    <div class="form-group">
        <label class="form-label" for="book-cover">Обложка книги:</label>
        <input
            id="book-cover"
            class="form-control"
            type="file"
            name="fileCover"
            accept="image/png,image/jpg,image/jpeg"
        >
    </div>
    <div class="form-group">
        <label for="book-file" class="form-label">Файл книги:</label>
        <input
            id="book-file"
            class="form-control"
            type="file"
            name="fileBook"
            accept="text/plain,application/pdf"
        >
    </div>
    <div class="form-group text-right">
        <button class="btn btn-primary">Сохранить</button>
    </div>
</form>